<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All podcasts
    </h1>

    <a href="/podcasts/new" class="btn btn-block btn-outline-secondary">
      Add a new podcast
    </a>
  </div>
</div>


<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Created by
        </th>

        <th>
          Logo
        </th>

        <th>
          Title
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @podcasts.each do |podcast| %>
      <tr>
        <td>
          <%= podcast.id %>
        </td>

        <td>
          <%= podcast.created_by %>
        </td>

        <td>
          <%= podcast.logo %>
        </td>

        <td>
          <%= podcast.title %>
        </td>

        <td>
          <%= time_ago_in_words(podcast.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(podcast.updated_at) %> ago
        </td>

        <td>
          <a href="/podcasts/<%= podcast.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

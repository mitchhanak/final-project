<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All episodes
    </h1>

    <a href="/episodes/new" class="btn btn-block btn-outline-secondary">
      Add a new episode
    </a>
  </div>
</div>


<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Created by
        </th>

        <th>
          Title
        </th>

        <th>
          Podcast
        </th>

        <th>
          Audio
        </th>

        <th>
          Xml
        </th>

        <th>
          Description
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @episodes.each do |episode| %>
      <tr>
        <td>
          <%= episode.id %>
        </td>

        <td>
          <%= episode.created_by %>
        </td>

        <td>
          <%= episode.title %>
        </td>

        <td>
          <%= episode.podcast_id %>
        </td>

        <td>
          <%= episode.audio %>
        </td>

        <td>
          <%= episode.xml %>
        </td>

        <td>
          <%= episode.description %>
        </td>

        <td>
          <%= time_ago_in_words(episode.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(episode.updated_at) %> ago
        </td>

        <td>
          <a href="/episodes/<%= episode.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

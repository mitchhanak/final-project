<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      My episodes
    </h1>
    Add new episodes via the details page of a podcast
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>

        <th>
          Title
        </th>

        <th>
          Podcast
        </th>

        <th>
          Description
        </th>
        
        <th>
          Created by
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @episodes.order( :created_at => :desc ).each do |episode| %>
      <% podcast = Podcast.find(episode.podcast_id) %>
      <tr>

        <td>
          <a href="/episodes/<%= episode.id %>" ><%= episode.title %></a>
        </td>

        <td>
          <%= image_tag(podcast.logo_url(:thumbnail), :width => 50, :height => 50) %><a href="/podcasts/<%= podcast.id %>"</a><%= podcast.title %>
        </td>

        <td>
          <%= episode.description %>
        </td>
        
        <td>
          <%= User.find(episode.created_by).username %>, <%= time_ago_in_words(episode.created_at) %> ago
        </td>
        
        <td>
          <%= time_ago_in_words(episode.updated_at) %> ago
        </td>

        <td>
          <a href="/episodes/<%= episode.id %>" class="btn btn-block btn-outline-secondary">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<h1>
  Add a new episode
</h1>


<hr>

<form action="/create_episode" method="post">

  <div class="form-group">
    <label for="created_by">
      Created by
    </label>

    <input type="text" id="created_by" name="created_by" class="form-control">
  </div>

  <div class="form-group">
    <label for="title">
      Title
    </label>

    <input type="text" id="title" name="title" class="form-control">
  </div>

  <div class="form-group">
    <label for="podcast_id">
      Podcast
    </label>

    <input type="text" id="podcast_id" name="podcast_id" class="form-control">
  </div>

  <div class="form-group">
    <label for="audio">
      Audio
    </label>

    <input type="text" id="audio" name="audio" class="form-control">
  </div>

  <div class="form-group">
    <label for="xml">
      Xml
    </label>

    <input type="text" id="xml" name="xml" class="form-control">
  </div>

  <div class="form-group">
    <label for="description">
      Description
    </label>

    <textarea id="description" name="description" class="form-control" rows="3"></textarea>
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create episode
  </button>
</form>

<hr>

<a href="/episodes">
  Go back
</a>
